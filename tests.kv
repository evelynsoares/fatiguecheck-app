<FirstWindow>:
    name: "first"
    canvas.before:
        Color:
            rgba: hex('#ECF2FE')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        Label:
            font_name: "./fonts/static/Urbanist-Light.ttf"
            text: "Para qual tipo de cabo\ndeseja calcular dados?"
            pos_hint : {"x": 0, "top": 0}
            font_size: 24
            color: hex('#000000')
            
            #size: root.width/2, root.height/2
            #on_press: app.root.current = "splash"

        Button:
            font_name: "./fonts/static/Urbanist-ExtraLight.ttf"
            text: "Alumínio"
            size_hint: 0.75, 0.25
            pos_hint : {"center_x": .5}
        Button:
            font_name: "./fonts/static/Urbanist-ExtraLight.ttf"
            text: "ACSR"
            size_hint: 0.75, 0.25
            pos_hint : {"center_x": .5}

