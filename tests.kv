<SplashArt>:
    name: "splash"
    canvas.before:
        Color:
            rgba: hex('#3241E4')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        padding: [(self.width - 160)/2, (self.height - 160)/2, 0, 0]
        Image
